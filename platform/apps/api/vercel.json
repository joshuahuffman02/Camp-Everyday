{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "buildCommand": "pnpm build:shared && pnpm --dir platform/apps/api build && pnpm --dir platform/apps/api prisma generate",
    "installCommand": "pnpm install",
    "framework": null,
    "functions": {
        "api/index.js": {
            "maxDuration": 30,
            "memory": 1024,
            "includeFiles": "node_modules/.prisma/**"
        }
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api/index.js"
        }
    ]
}